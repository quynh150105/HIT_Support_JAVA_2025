package BaiTapVeNhaBuoi1;

import java.util.Scanner;

public class SinhVien {
	private String name;
	private int age;
	private double gpa;
	
	public SinhVien() {
		
	}
	
	public SinhVien(String name, int age, double gpa) {
		this.age= age;
		this.name = name;
		this.gpa = gpa;
	}
	
	@Override
	public String toString() {
		return "Name: " + name  + " Age: " + age+ " Gpa: " + gpa + "\n";
	}
	
	public void nhap() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Name: ");
		name = sc.nextLine();
		System.out.println("Age: ");
		age = sc.nextInt();
		sc.nextLine();
		System.out.println("Gpa: ");
		gpa = sc.nextDouble();
		
	}

}
